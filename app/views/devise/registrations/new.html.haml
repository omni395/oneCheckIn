%h3 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource

  .form-floating.mt-3
    = f.email_field :email, class: "form-control", id: "floatingEmail"
    %label{for: "floatingEmail"} Email address

  .form-floating.mt-3
    = f.password_field :password, class: "form-control", id: "floatingPassword"
    %label{for: "floatingPassword"} Password
    - if @minimum_password_length
      %small.mute
        (#{@minimum_password_length} characters minimum)

  .form-floating.mt-3
    = f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirmation"
    %label{for: "floatingPasswordConfirmation"} Password confirmation

  = f.submit "Sign up", class: "mt-3 btn btn-primary"
= render "devise/shared/links"


%section.my-5
  .container-fluid.h-custom
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col-md-9.col-lg-6.col-xl-5
        %i.fas.fa-american-sign-language-interpreting.mx-3.text-success{:style => "font-size:200px"}
      .col-md-8.col-lg-6.col-xl-4
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "shared/flash_messages", resource: resource
          = render "devise/shared/error_messages", resource: resource
          %label.form-label{:for => "avatar_field"} Avatar

          = f.file_field :avatar,
                        :class => "form-outline mb-4 form-control form-control-sm",
                        :id => "avatar_field"

          %label.form-label{:for => "email_field"} Email address
          = f.email_field :email,
                          :autofocus => true,
                          :placeholder => "Enter a valid email address",
                          :type => "email",
                          :class => "form-outline mb-4 form-control form-control-lg",
                          :id => "email_field"

          %label.form-label{:for => "password_field"} Password
          = f.password_field :password,
                    :placeholder => "Enter password",
                    :type => "password",
                    :class => "form-outline mb-4 form-control form-control-lg",
                    :id => "password_field"

          %label.form-label{:for => "password_confirmation_field"} Password
          = f.password_field :password_confirmation,
                    :placeholder => "Enter password confirmation",
                    :type => "password",
                    :class => "form-outline mb-4 form-control form-control-lg",
                    :id => "password_confirmation_field"

          .d-flex.justify-content-between.align-items-center
            .d-flex.align-items-start
              .text-center.text-lg-start.mt-4.pt-2
                = f.submit "Sign up",
                          :style => "padding-left: 2.5rem; padding-right: 2.5rem;",
                          :class => "btn btn-primary btn-lg"
            %p.small.fw-bold.mt-2.pt-1.mb-0
              Login with Email:
              %a.link-danger{:href => new_user_session_path} Login
