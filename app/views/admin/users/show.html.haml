-# Modal
= render ("admin/shared/admin_user_edit_modal")
-# Show user
.row.mb-3.my-3
  .col-lg-6
    .card.shadow-3-strong{:style => "max-width: 100%; min-width: 55%;"}
      .row.g-0
        .col-lg-4.text-center
          = avatar(@user, 250, 250, "rounded-circle mx-3 my-3")
        .col-lg-8
          .card-body
            .card-header
              %h5
                .d-flex.justify-content-between
                  = full_name(@user)
                  %i= @user.username
                  %i= @user.email
              %small= @user.role.name
            %p.card-title.my-3
              Birth day:
              = @user.birth_date
            %p.card-title.my-3
              User user user
            %small.text-muted Last sign in #{@user.last_sign_in_at}
            -#.strftime("%d-%m-%Y at %H:%M")
            .card-footer
              .d-flex.justify-content-evenly
                = link_to "Edit", admin_user_path(@user),
                                  :class => "btn btn-success",
                                  "data-mdb-target" => "#exampleModal",
                                  "data-mdb-toggle" => "modal",
                                  :type => "button"
                = link_to "Back", :back, :class => "btn btn-warning"
                = link_to "Delete", admin_user_path(@user), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger"

  .col-lg-6
    .container-fluid.shadow-3-strong
      .h5 User activity:
